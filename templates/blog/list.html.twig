{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>
    {{ form_start(filter) }}
        {{ form_widget(filter) }}
    {{ form_end(filter) }}

    <div class="row d-flex justify-content-center">
        {% for article in articles %}
            <div class="card text-white bg-primary m-2 col-md-3">
                <div class="card-header">
                    Publiè le {{ article.updatedAt|date('d,m,Y') }} à {{ article.updatedAt|date('H:i') }} dans la catégorie {{article.category.name}}
                    {% for tag in article.tags %}
                        <span class="badge rounded-pill bg-secondary">{{ tag.name }}</span>  
                    {% endfor %}
                </div>
                <div class="card-body">
                <h4 class="card-title">{{ article.title }}</h4>
                <p class="card-text">{{ article.content }}</p>
                <a class="btn btn-secondary" href="{{ path('blog_show', {slug: article.slug}) }}">Voir l'article</a>
                </div>
            </div>
            
        {% endfor %}
    </div>
{% endblock %}
